<h1 class="display-1 center-align">Our Current Menu</h1>

<div class="carousel">
  <% settings.bakery.inventory.keys.each do |bakedgood|%>
    <% settings.bakery.inventory[bakedgood].values.each do |item|%>
      <a class="carousel-item" href="/"><img class="carousel-pic" src="<%= item.image %>"></a>
    <% end %>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <% settings.bakery.inventory.keys.each do |bakedgood|%>
      <% settings.bakery.inventory[bakedgood].values.each do |item|%>
        <div class="col s4">
          <div class="card small">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src="<%= item.image %>">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= item.type %><span class="right-align right"><%= item.price %></span></span>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= item.type %><i class="material-icons right">close</i></span>
              <p><%= item.description %></p>
              <p><%= item.price %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>




